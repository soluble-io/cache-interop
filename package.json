{
  "name": "@soluble/cache-interop-monorepo",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/soluble-io/cache-interop",
  "repository": {
    "type": "git",
    "url": "https://github.com/soluble-io/cache-interop.git"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "build": "lerna run build",
    "clean": "yarn workspaces foreach -ptv run clean",
    "test": "run-s 'test:*'",
    "test:unit": "yarn workspaces foreach -ptv --exclude '@soluble/*e2e*' run test:unit",
    "test:e2e": "yarn workspaces foreach -ptv --include '@soluble/*e2e*' run test:e2e",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "yarn build && changeset publish",
    "typecheck": "yarn workspaces foreach -ptv run typecheck",
    "lint": "yarn workspaces foreach -ptv run lint",
    "fix:staged": "yarn workspaces foreach -ptv run fix:staged",
    "reinstall": "yarn clean && yarn workspaces foreach -ptv run clean && npx rimraf@^3.0 --no-glob ./yarn.lock ./node_modules && yarn install",
    "coverage:publish": "codecov && yarn workspaces foreach -ptv run coverage:publish -- -f coverage/clover.xml",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "docs:start": "yarn --cwd ./docs start"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "microbundle": "^0.13.0",
    "moq.ts": "^7.3.4",
    "npm-check-updates": "^11.5.11",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.47.0",
    "testcontainers": "^7.10.0",
    "ts-jest": "^26.5.6",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=10.13",
    "yarn": ">=1.19.0 <2.0.0",
    "npm": "please-use-yarn"
  }
}
